{% extends 'dragonpay_soapxml/base.xml' %}

{% block body %}
<RequestPayout xmlns="http://api.dragonpay.ph/">
  <apiKey>{{ dp_merchant_apikey }}</apiKey>
  <merchantTxnId>{{ tnx_id }}</merchantTxnId>
  <userId>{{ user_id }}</userId>
  <amount>{{ amount }}</amount>
  <currency>{{ currency|default:'PHP'}}</currency>
  <description>{{ description }}</description>
  <runDate>{{ timestamp }}</runDate>
</RequestPayout>
{% endblock %}
