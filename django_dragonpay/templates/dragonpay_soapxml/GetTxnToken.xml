{% extends 'dragonpay_soapxml/base.xml' %}

{% block body %}
<GetTxnToken xmlns="http://api.dragonpay.ph/">
    <merchantId>{{ dp_merchant_id }}</merchantId>
    <password>{{ dp_merchant_secret }}</password>
    <merchantTxnId>{{ txn_id }}</merchantTxnId>
    <amount>{{ amount }}</amount>
    <ccy>{{ ccy|default:"PHP" }}</ccy>
    <description>{{ description }}</description>
    <email>{{ email }}</email>
    {% if param1 %}<param1>{{ param1 }}</param1>{% endif %}
    {% if param2 %}<param2>{{ param2 }}</param2>{% endif %}
</GetTxnToken>
{% endblock%}
